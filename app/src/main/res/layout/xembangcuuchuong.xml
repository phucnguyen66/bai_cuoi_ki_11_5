<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgreview">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#946B27" />
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Bảng cửu chương"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/quay_lai"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="235dp"
        android:backgroundTint="#AFEEEE"
        android:text="Quay lại"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/multiplicationBoard"
        android:layout_width="match_parent"
        android:layout_height="568dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bangxanh3" />



    <TextView
        android:id="@+id/multiplicationTextView"
        android:layout_width="405dp"
        android:layout_height="526dp"
        android:layout_alignBottom="@+id/multiplicationBoard"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Bảng cửu chương"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="279dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:background="@drawable/bglogin2"
        android:orientation="vertical">

        <!-- First row: buttons 1 to 5 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Buttons with images and circular shape -->
            <ImageView
                android:id="@+id/buttonTable1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c1" />

            <ImageView
                android:id="@+id/buttonTable2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c2" />

            <ImageView
                android:id="@+id/buttonTable3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c3" />

            <ImageView
                android:id="@+id/buttonTable4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c4" />

            <ImageView
                android:id="@+id/buttonTable5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c5" />

        </LinearLayout>

        <!-- Second row: buttons 6 to 9 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonTable6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c6" />

            <ImageView
                android:id="@+id/buttonTable7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c7" />

            <ImageView
                android:id="@+id/buttonTable8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c8" />

            <ImageView
                android:id="@+id/buttonTable9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/c9" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
